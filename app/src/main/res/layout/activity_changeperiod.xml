<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_20"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_20"/>
        <Button
            android:id="@+id/commit"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/commit"
            android:layout_gravity="right"
            android:backgroundTint="@color/black"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1">
            <TextView
                android:layout_width="@dimen/dp_45"
                android:layout_height="wrap_content"
                android:text="生产单元添加"
                android:drawableTop="@drawable/paid2"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_7"
                android:layout_gravity="center_vertical"/>

            <Spinner
                android:gravity="center"
                android:id="@+id/spinner_produce"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:background="@color/grey_w"
                android:paddingLeft="@dimen/dp_120"
                android:popupBackground="@color/grey"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_height="match_parent"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_15"
                android:backgroundTint="@color/black"
                tools:ignore="RtlHardcoded" />
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1">
            <TextView

                android:drawableTop="@drawable/time"
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:text="预估成熟时间"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_10"
                android:layout_gravity="center_vertical"/>

            <Button
                android:id="@+id/btn_Date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_40"
                android:background="@color/white"
                android:hint="date"
                android:paddingLeft="@dimen/dp_3"
                android:paddingRight="@dimen/dp_3"
                android:textColor="@color/black"
                android:gravity="center"
                android:textColorHint="@color/grey"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1">
            <TextView
                android:drawableTop="@drawable/weight"
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:text="投入数量"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_10"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/inputNum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_40"
                android:hint="inputs"
                android:paddingLeft="@dimen/dp_3"
                android:paddingRight="@dimen/dp_3"
                android:textColor="@color/black"
                android:gravity="center"
                android:textColorHint="@color/grey"/>
        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1">

            <TextView
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableTop="@drawable/date"
                android:gravity="center"
                android:text="计划选择"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_8" />
            <Spinner
                android:id="@+id/plan"
                android:gravity="center"
                android:background="@color/grey_w"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:paddingLeft="@dimen/dp_120"
                android:popupBackground="@color/grey"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_height="match_parent"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_15"
                android:backgroundTint="@color/black"
                tools:ignore="RtlHardcoded" />

        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1">
            <TextView
                android:layout_width="@dimen/dp_40"
                android:drawableTop="@drawable/pending"
                android:layout_height="wrap_content"
                android:text="品种"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="@dimen/sp_10"
                android:layout_gravity="center_vertical"/>
            <Spinner
                android:id="@+id/nameId"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:paddingLeft="@dimen/dp_120"
                android:gravity="center"
                android:background="@color/grey_w"
                android:popupBackground="@color/grey"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_height="match_parent"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_15"
                android:backgroundTint="@color/black"
                tools:ignore="RtlHardcoded" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>