<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_20"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_20"/>
        <Button
            android:id="@+id/commit"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/commit"
            android:layout_gravity="right"
            android:backgroundTint="@color/black"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_10">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            >
            <TextView
                android:drawableTop="@drawable/rename"
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:text="饲养鱼类"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_10"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_40"
                android:hint="种养名称"
                android:paddingLeft="@dimen/dp_3"
                android:paddingRight="@dimen/dp_3"
                android:textColor="@color/black"
                android:gravity="center"
                android:textColorHint="@color/grey"/>

        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1">
            <TextView
                android:drawableTop="@drawable/grow"
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:text="计划阶段"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_10"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_40">
                <EditText
                    android:id="@+id/period"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:hint="计划阶段"
                    android:gravity="center"
                    android:textColorHint="@color/grey"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/day"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="天数"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textColorHint="@color/grey"
                    android:layout_weight="1"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1.5">
            <TextView
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:text="饲料方案"
                android:drawableTop="@drawable/paid2"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_7"
                android:layout_gravity="center_vertical"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Spinner
                android:id="@+id/raiseId"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="@color/grey_w"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:backgroundTint="@color/black"
                tools:ignore="RtlHardcoded" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <EditText
                android:id="@+id/raiseNum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="每次投喂量"
                android:paddingLeft="@dimen/dp_3"
                android:paddingRight="@dimen/dp_3"
                android:textColor="@color/black"
                android:gravity="center"
                android:textColorHint="@color/grey"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1">

            <TextView
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/time"
                android:layout_gravity="center_vertical"
                android:text="投喂时间"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_8"/>
            <EditText
                android:id="@+id/raiseTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_40"
                android:hint="投喂时间"
                android:paddingLeft="@dimen/dp_3"
                android:paddingRight="@dimen/dp_3"
                android:textColor="@color/black"
                android:gravity="center"
                android:textColorHint="@color/grey"/>
        </FrameLayout>

    </LinearLayout>
</LinearLayout>