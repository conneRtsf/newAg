<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#C8C8C8"
    android:id="@+id/root"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backcolor"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_65"
            android:layout_marginStart="@dimen/dp_150"
            android:layout_marginTop="@dimen/dp_65"
            android:gravity="center"
            android:text="收入\n1800元"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_marginStart="@dimen/dp_120"
            android:layout_marginTop="@dimen/dp_75"
            android:background="@drawable/line2" />



        <Button
            android:id="@+id/btn_Date"
            android:layout_width="@dimen/dp_105"
            android:layout_height="@dimen/dp_65"
            android:layout_marginTop="@dimen/dp_65"
            android:outlineProvider="none"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:background="@color/green_new"
            android:gravity="center"
            android:text="time"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15"/>

        <Button
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/sp_30"
            android:background="@color/newnewBlue"
            android:text="删除"
            android:visibility="gone"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_20"
            android:drawableLeft="@drawable/money"
            android:drawableTint="@color/投入成本记录"
            android:background="@drawable/backnew"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="销售记账"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15" />

        <Button
            android:id="@+id/right"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_29"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/more_left" />
        <Button
            android:id="@+id/left"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/more_right"/>
        <FrameLayout
            android:background="@color/背景色"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_180">

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/refresh"
                android:layout_width="@dimen/dp_320"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/view_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
            <Button
                android:id="@+id/plus"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_300"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_40"
                android:background="@drawable/plus"/>
        </FrameLayout>
    </FrameLayout>



</androidx.drawerlayout.widget.DrawerLayout>